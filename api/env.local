# Kloudy Kare - Local Testing Environment

# Phase Configuration
PHASE=testing
PORT=7010

# Database Configuration (we'll use SQLite for now to avoid Docker issues)
DATABASE_URL=sqlite:./kloudy_testing.db
REDIS_URL=redis://localhost:6379

# AI Configuration (your local Ollama)
OLLAMA_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.3:latest

# MCP Configuration
MCP_URL=http://localhost:8080

# Security
JWT_SECRET=testing_jwt_secret_change_in_production

# Twilio Configuration (optional for now)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_SMS_NUMBER=

# Sandata API Configuration (optional for now)
SANDATA_BASE_URL=
SANDATA_CLIENT_ID=
SANDATA_CLIENT_SECRET=

# Feature Flags
FEATURE_TWILIO_SMS=true
FEATURE_AGENT_MIRROR=true
FEATURE_KB_RAG=true
FEATURE_MCP_GUARDRAILS=true
FEATURE_SANDATA_READ=true
FEATURE_SANDATA_WRITE=false
FEATURE_AUTHORIZATION_WIZARD=true
FEATURE_BILLING_DRAFTS=true
FEATURE_DEV_LOGIN=true

# Logging
LOG_LEVEL=debug
DEBUG=true

# CORS
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:8717,http://localhost:3000
